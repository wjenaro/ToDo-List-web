<%- include("partials/header.ejs") %>

<h1>Todo List</h1>
<div class="task">
  <form action="/delete" method="post">
  <ul id="taskItems">
 <% tasks.forEach( (taskList, index)=>{ %> 
    
        <li id="tasklist">
          <input type="checkbox" name="checkedItems" class="checkbox" value="<%= index %>">  
           <%= taskList %> </li>
   
<%  }

); 
%>
</ul>

  </form>
 
 </div>
 <div class="add-form" style="background-color: brown;">
  <form action="/add" method="post">
    <input type="text" name="todo" id="taskinput" placeholder="Add a new todo">
    <input type="submit" value="Add" id="submitbutton">
  </form>

 </div>
 

   

